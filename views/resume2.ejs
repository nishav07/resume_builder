function downloadPDF() {
  const resume = document.getElementsByClassName('resume')[0];
  const opt = {
    margin:       0,
    filename:     'resume2.pdf',
    image:        { type: 'jpeg', quality: 0.98 },
    html2canvas:  { scale: 2 },
    jsPDF:        { unit: 'mm', format: 'a4', orientation: 'portrait' }
  };

  html2pdf().set(opt).from(resume).save();
}


</script>
</body>
</html>